{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "buildDefault",
            "command": "cmake",
            "args": [
                "--build",
                ".",
                "--preset debug"
            ],
            "type": "shell",
            "dependsOn":[
                "format"
            ]
        },
         {
            "label": "format",
            "command": "find src/ -iname '*.h' -o -iname '*.cpp' | xargs clang-format -i",
            "type": "shell"
        }
    ]
}